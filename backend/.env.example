# Live Tesserae Backend Configuration
# Copy this file to .env and adjust values as needed

# Database connection
DATABASE_URL=postgresql://tesserae:tesserae_local@localhost:5433/tesserae

# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Mosaic configuration
GRID_WIDTH=1000
GRID_HEIGHT=1000
TILE_SIZE=32
CHUNK_SIZE=100

# Storage paths (local filesystem for MVP)
STORAGE_PATH=storage
TILES_PATH=storage/tiles
CHUNKS_PATH=storage/chunks
